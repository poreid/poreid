    <smartcard-pinpad-readers>
        <aliases>
            <alias-of unique-id="IDBridgeCT700">
                <alias>Gemalto GemPC Pinpad USB Smart Card Read</alias>
                <alias>Gemalto USB GemPCPinpad SmartCard Reader</alias>
                <alias>Gemplus GemPC Pinpad</alias>
            </alias-of>
            <alias-of unique-id="ACR83 PINeasy">
                <alias>ACS ACR83U</alias>
            </alias-of>
            <alias-of unique-id="XIRING MyLeo">
                <alias>XIRING MyLeo (123456789)</alias>
                <alias>XIRING USB Smart Card Reader</alias>
            </alias-of>
            <alias-of unique-id="generic reader">
                <alias>generic reader</alias>
            </alias-of>
        </aliases>
        <smartcard-readers>
            <smartcard-reader>
                <unique-id>ACR83 PINeasy</unique-id>
                <properties>
                    <implementing-class>org.poreid.pinpad.AcsACR83u</implementing-class>
                    <supported-oses>
                        <os>
                            <os-name>windows</os-name>
                            <supports>
                                <verify>true</verify>
                                <modify>true</modify>
                                <inject>true</inject>
                            </supports>
                        </os>
                        <os>
                            <os-name>linux</os-name>
                            <supports>
                                <verify>true</verify>
                                <modify>true</modify>
                                <inject>true</inject>
                            </supports>
                        </os>
                        <os>
                            <os-name>mac</os-name>
                            <supports>
                                <verify>false</verify>
                                <modify>false</modify>
                                <inject>true</inject>
                            </supports>
                        </os>
                    </supported-oses>
                    <supported-smartcards>
                        <smartcard>
                            <implementing-class>org.poreid.cc.gemsafe.GemsafeCard</implementing-class>
                            <properties>
                                <verify>true</verify>
                                <modify>false</modify>
                            </properties>
                        </smartcard>
                        <smartcard>
                            <implementing-class>org.poreid.cc.ias.IASCard</implementing-class>
                            <properties>
                                <verify>true</verify>
                                <modify>false</modify>
